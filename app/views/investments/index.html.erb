<% @investments.each do |investment| %>
  <tr>
    <td><%= investment.funding_id %></td>
    <td><%= investment.company_perma %></td>
    <td><%= investment.company_id %></td>
    <td><%= investment.financial_perma %></td>
    <td><%= investment.financial_id %></td>
    <td><%= investment.individual_perma %></td>
    <td><%= investment.individual_id %></td>
    <td><%= link_to 'Show', investment %></td>
    <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
    <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

